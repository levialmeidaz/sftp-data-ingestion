CREATE TABLE dw.fat_pedidos (
    id VARCHAR(50),
    data_insercao TIMESTAMP,
    tipo_entrega VARCHAR(50),
    pedido TEXT,
    data_nfe DATE,
    serie_nfe TEXT,
    numero_nfe TEXT,
    valor_nfe NUMERIC(15,2),
    qtd_volumes INT,
    peso NUMERIC(12,3),
    remessa TEXT,
    nome_destinatario TEXT,
    endereco_completo TEXT,
    cep VARCHAR(20),
    cod_cd INT,
    cd VARCHAR(50),
    cnpj_cpf_transportadora TEXT,
    transportador TEXT,
    lead_time TEXT,
    data_prev_entrega DATE,
    status_prazo VARCHAR(50),
    id_ult_ocr TEXT,
    ultima_ocorrencia VARCHAR(255),
    chave_ult_ocr TEXT,
    data_ultima_ocr TIMESTAMP,
    agrupador VARCHAR(100),
    endereco VARCHAR(255),
    numero VARCHAR(255),
    bairro VARCHAR(255),
    cidades VARCHAR(255),
    uf TEXT,
    etiquetas TEXT,
    chegada_transportadora TIMESTAMP,
    cod_vendedor TEXT,
    chave_nfe TEXT,
    qtd_itens TEXT,
    data_prev_entrega_original DATE,
    cpf_destinatario TEXT,
    grau_risco VARCHAR(50),
    tipo_operacao VARCHAR(50),
    arquivo_origem VARCHAR(255)
);
